<Window x:Class="library.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="Добавить книгу" Height="300" Width="300">
    <Window.Background >
        <ImageBrush ImageSource="Foto/14.png" />
    </Window.Background>
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Инвентарный номер:"/>
            <TextBox x:Name="InventoryNumberTextBox" Margin="0 5"/>
            <TextBlock Text="Название:" Margin="0 10 0 0"/>
            <TextBox x:Name="TitleTextBox" Margin="0 5"/>
            <TextBlock Text="Автор:" Margin="0 10 0 0"/>
            <TextBox x:Name="AuthorTextBox" Margin="0 5"/>
            <Button Content="Добавить" Width="100" Height="30" Margin="0 10 0 0" Click="AddBook_Click"/>
        </StackPanel>
    </Grid>
</Window>
