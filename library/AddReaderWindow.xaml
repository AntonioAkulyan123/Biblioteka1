<Window x:Class="library.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="Добавить читателя" Height="350" Width="300">
    <Window.Background >
        <ImageBrush ImageSource="Foto/14.png" />
    </Window.Background>
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="ReaderTicketNumberTextBox" Margin="0 5" IsReadOnly="True"/>
            <TextBlock Text="Имя:" Margin="0 10 0 0"/>
            <TextBox x:Name="NameTextBox" Margin="0 5"/>
            <TextBlock Text="Адрес:" Margin="0 10 0 0"/>
            <TextBox x:Name="AddressTextBox" Margin="0 5"/>
            <TextBlock Text="Номер телефона:" Margin="0 10 0 0"/>
            <TextBox x:Name="PhoneTextBox" Margin="0 5"/>
            <Button Content="Добавить" Width="100" Height="30" Margin="0 10 0 0" Click="AddReader_Click"/>
        </StackPanel>
    </Grid>
</Window>