<Window x:Class="library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Авторизация" Height="350" Width="610">
    <Window.Background >
        <ImageBrush ImageSource="Foto/13.jpg" />
    </Window.Background>
    <Grid>
        <TextBlock Text="Авторизация" FontSize="36" Margin="10" HorizontalAlignment="Center" FontWeight="Bold" Foreground="White"/>
        <StackPanel Margin="90">
            <TextBlock Text="Логин:" HorizontalAlignment="Center" FontSize="18" Foreground="White"/>
            <TextBox FontSize="16" x:Name="txtUsername" Margin="0 0 0 10" Foreground="White" BorderBrush="#7FFFFFFF"/>

            <TextBlock Text="Пароль:" HorizontalAlignment="Center" FontSize="18" Foreground="White"/>
            <PasswordBox FontSize="16" x:Name="txtPassword" Margin="0 0 0 10" BorderBrush="#7FFFFFFF" Foreground="White"/>

        </StackPanel>
        <StackPanel>
            <Button Content="Войти" Click="Login_Click" HorizontalAlignment="Center" Width="138" Margin="0,229,0,33" FontSize="20" Height="39"/>
        </StackPanel>
    </Grid>
</Window>

